@model IEnumerable<WebApplicationTest.Models.Songs>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SongName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongID" asp-route-slugg="@WebApplicationTest.Utils.Slugg.Slugify(item.SongName)">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongID" asp-route-slugg="@WebApplicationTest.Utils.Slugg.Slugify(item.SongName)">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongID" asp-route-slugg="@WebApplicationTest.Utils.Slugg.Slugify(item.SongName)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
